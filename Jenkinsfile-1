pipeline {

  environment {
    dockerimagename = "test9877/java-web-app:latest"
    dockerImage = ""
  }

  agent any

  stages {

    stage('Build image') {
      steps{
        script {
          dockerImage = docker.build dockerimagename
        }
      }
    }
  
    stage('Scan') {
      steps {
        sh 'trivy test9877/java-web-app:latest'
      }
    }
  }
}

